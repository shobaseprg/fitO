
<div class = form-wrapper>
    <%= form_with(model: @input, :url => { :controller => :inputs, :action => :create },local: true) do |form| %>
      <%= form.text_field :title, placeholder: "title" %>
      <%= form.text_area :content, placeholder: "content" , rows: "10" %>
      <%= form.text_field :image, placeholder: "image" %>
      <%= form.submit "SEND" %>
    <% end %>
</div>