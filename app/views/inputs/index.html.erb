<div class ="totalInputFrame">
<div class = 'input_wrappar'>

  <% @inputs.each do |input| %>
    <div class= "input-box"> 
        <div class = "input-title">
          <span>title  :   </span>
          <%= input.title %>
        </div>

        <div class ="input_content">
          <%= simple_format input.content%>
        </div>

        <div class ="input_image">
            <%= link_to "image" "#{input.image}" %>
        </div>
        <%# ------------------------------------ %>
        <% if input.user.on_off == 0%>
        <div class ="input_slack">
             <span> slack  :  </span>
            <%= input.user.slack%>
        </div>
        <% else%>
        <div class ="input_slack_on">
             <span> slack  :  </span>
            <%= input.user.slack%>
        </div>
        <% end %>
            <%# ---------------------------------------- %>
    </div>
  <% end %>

</div>
