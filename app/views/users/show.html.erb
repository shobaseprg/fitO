<%# users#show.html
マイページ表示用 %>

<div class = "btn-frame">
    <div class = "mypage-btn  mypageInputBtn btn">
    input
    </div>
    <div class = "mypage-btn mypageOutputBtn btn">
    Output
    </div>
</div>

<%# マイページデフォルト %>
<div class = "mypageDefault">
</div>

<div class = 'input_wrappar mypageInput mypageNonShow '>
  <% @myinputs.each do |myinput| %>
    <div class= "input-box"> 
        <div class = "input-title">
          <%= myinput.title %>
        </div>
        <div class ="input_content">
          <%= simple_format myinput.content%>
        </div>
        <div class ="input_image">
            <%= link_to "image" "#{myinput.image}" %>
        </div>
        <div class ="input_name">
          <%= link_to "教えてもらった",  "/lessons/#{myinput.id}" ,method: :PATCH %>
        </div>
    </div>    <%# "input-box">  %>
  <% end %>  <%# each %>
</div><%# 'input_wrappar'> %>

<div class = 'input_wrappar mypageOutput mypageNonShow'>
  <% @myoutputs .each do |myoutput| %>
    <div class= "input-box"> 
        <div class = "input-title">
          <%= myoutput.title %>
        </div>
        <div class ="input_content">
          <%= simple_format myoutput.content%>
        </div>
        <div class ="input_image">
            <%= link_to "image" "#{myoutput.image}" %>
        </div>
    </div><%# "input-box">  %>
  <% end %><%# each %>
</div><%# 'input_wrappar'> %>


